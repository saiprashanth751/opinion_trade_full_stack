{
  "name": "trade_app",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "monitor:report": "tsx scripts/backgroundMonitor.ts report",
    "monitor:continuous": "tsx scripts/backgroundMonitor.ts monitor",
    "monitor:health": "tsx scripts/backgroundMonitor.ts health",
    "monitor:watch": "tsx scripts/backgroundMonitor.ts monitor 15",
    "system:health": "npm run monitor:health && echo 'âœ… System health check completed'"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "tsx": "^4.20.3",
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.1.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "dependencies": {
    "next": "^15.4.2"
  }
}
